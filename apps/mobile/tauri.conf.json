{
  "$schema": "./node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "mobile",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeBuildCommand": "cd ../web pnpm build && pnpm export",
    "frontendDist": "./dist",
    "devUrl": "http://localhost:3001"
  },
  "app": {
    "windows": [
      {
        "title": "Restaurant Management App",
        "width": 576,
        "height": 700,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
